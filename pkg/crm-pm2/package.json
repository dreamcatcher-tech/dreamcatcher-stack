{
  "name": "@dreamcatcher-tech/crm-pm2",
  "version": "1.0.144",
  "description": "Server side CRM instance",
  "main": "app.mjs",
  "type": "module",
  "scripts": {
    "dev": "pm2 flush && pm2 install . && pm2 logs",
    "rm": "pm2 delete @dreamcatcher-tech/crm-pm2 -f",
    "re": "yarn rm && yarn dev"
  },
  "dependencies": {
    "@dreamcatcher-tech/interblock": "^1.0.144",
    "@pm2/io": "^5.0.2",
    "ansi-colors-browserify": "^4.1.2",
    "assert-fast": "^1.0.3",
    "cliui": "^8.0.1",
    "debug": "^4.3.4",
    "delay": "^6.0.0",
    "dotenv": "^16.3.1",
    "du": "^1.0.0",
    "json-bigint": "^1.0.0",
    "pmx": "1.6.7",
    "pretty-bytes": "^6.1.1",
    "process": "^0.11.10"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/keymetrics/pmx.git"
  },
  "apps": {
    "ignore_watch": [
      "crm-pm2-repo"
    ],
    "kill_timeout": 10000,
    "wait_ready": true,
    "listen_timeout": 10000,
    "merge_logs": true,
    "max_memory_restart": "9000M",
    "script": "app.js",
    "node_args": "--experimental-specifier-resolution=node --max-old-space-size=8192",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3000,
      "WITH_FAKE_DATA": true
    }
  },
  "author": "",
  "license": "AGPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "<19"
  }
}
