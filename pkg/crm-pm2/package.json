{
  "name": "@dreamcatcher-tech/crm-pm2",
  "version": "1.0.40",
  "description": "Server side CRM instance",
  "main": "app.mjs",
  "type": "module",
  "scripts": {
    "dev": "pm2 flush && pm2 install . && pm2 logs",
    "rm": "pm2 delete @dreamcatcher-tech/crm-pm2 -f",
    "re": "yarn rm && yarn dev"
  },
  "dependencies": {
    "@dreamcatcher-tech/interblock": "^1.0.40",
    "@pm2/io": "^5.0.0",
    "ansi-colors-browserify": "^4.1.2",
    "cliui": "^8.0.1",
    "debug": "^4.3.4",
    "du": "^1.0.0",
    "json-bigint": "^1.0.0",
    "pmx": "1.6.7",
    "process": "^0.11.10"
  },
  "devDependencies": {
    "pm2": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/keymetrics/pmx.git"
  },
  "config": {},
  "apps": {
    "ignore_watch": [
      "crm-pm2-repo"
    ],
    "merge_logs": true,
    "max_memory_restart": "9000M",
    "script": "app.js",
    "node_args": "--experimental-specifier-resolution=node --max-old-space-size=8192",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3000,
      "WITH_FAKE_DATA": true
    }
  },
  "author": "",
  "license": "AGPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "<19"
  }
}
