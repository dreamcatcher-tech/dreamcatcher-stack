{
  "name": "@dreamcatcher-tech/interblock",
  "version": "1.0.10",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamcatcher-tech/interblock"
  },
  "homepage": "",
  "main": "src/index.mjs",
  "type": "module",
  "scripts": {
    "schemas": "node --experimental-specifier-resolution=node src/w006-schemas/bin.js && prettier -w src/w006-schemas/ipldSchemas.js",
    "schemas:dev": "nodemon --exec yarn schemas --ignore src/w006-schemas/ipldSchemas.js --ext js,md",
    "prepublishOnly": "yarn schemas && yarn build",
    "dev": "vite --force",
    "build": "vite build",
    "serve": "vite preview",
    "test": "eslint src && DEBUG_COLORS=1 DEBUG='' node --experimental-vm-modules node_modules/.bin/jest --bail",
    "watch": "DEBUG_COLORS=1 DEBUG='' node --experimental-vm-modules node_modules/.bin/jest --watch",
    "bench": "node --experimental-specifier-resolution=node src/w402-benchmarks/bench",
    "bench:dev": "nodemon --exec yarn bench"
  },
  "private": false,
  "author": "Dreamcatcher Command",
  "license": "AGPL-3.0",
  "dependencies": {
    "@ipld/dag-cbor": "^7.0.2",
    "@ipld/dag-pb": "^2.1.17",
    "@ipld/schema-validation": "^1.1.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.0",
    "ansi-colors-browserify": "^4.1.2",
    "assert-fast": "^1.0.1",
    "callsites": "^4.0.0",
    "columnify": "^1.6.0",
    "debug": "^4.3.3",
    "fast-deep-equal": "^3.1.3",
    "immutable": "^4.1.0",
    "ipfs-core": "^0.15.4",
    "ipld-hashmap": "^2.1.11",
    "ipld-schema": "^2.0.2",
    "ipld-schema-validator": "^0.1.0",
    "is-in-browser": "^2.0.0",
    "pad-left": "^2.1.0",
    "path-browserify": "^1.0.1",
    "pretty-bytes": "^6.0.0",
    "serialize-error": "^11.0.0",
    "uint8arrays": "^3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "benchmark": "^2.1.4",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rollup-plugin-visualizer": "^5.7.1",
    "supports-color": "^9.2.2",
    "trace-unhandled": "^2.0.1",
    "vite": "^3.0.2",
    "vitest": "^0.18.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "maxWorkers": "95%",
    "testTimeout": 300,
    "setupFiles": [
      "trace-unhandled/register"
    ],
    "roots": [
      "src/w002-api",
      "src/w008-ipld",
      "src/w010-hooks",
      "src/w023-system-reducer",
      "src/w210-engine",
      "src/w212-system-covenants",
      "src/w300-interpulse"
    ]
  },
  "wallaby": {
    "autoDetect": true,
    "tests": [
      "**/w002-api/**/*.test.js",
      "**/w008-ipld/**/*.test.js",
      "**/w010-hooks/**/*.test.js",
      "**/w023-system-reducer/**/*.test.js",
      "**/w210-engine/**/*.test.js",
      "**/w212-system-covenants/**/*.test.js",
      "**/w300-interpulse/**/*.test.js",
      "!package.test.js"
    ],
    "env": {
      "type": "node",
      "runner": "node",
      "params": {
        "runner": "--experimental-vm-modules --preserve-symlinks"
      }
    }
  }
}
