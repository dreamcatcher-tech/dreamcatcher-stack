  "author": "Dreamcatcher Command",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "assert": "^2.0.0",
    "clear": "^0.1.0",
    "cliui": "^7.0.4",
    "debug": "^4.3.1",
    "detect-node": "^2.1.0",
    "docker-names": "^1.1.1",
    "enquirer-browserify": "^2.3.10",
    "ora": "5.4.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "pretty-ms": "^7.0.1",
    "process": "^0.11.10",
    "readline-browserify": "^0.0.4",
    "set-immediate-shim": "^2.0.0"
